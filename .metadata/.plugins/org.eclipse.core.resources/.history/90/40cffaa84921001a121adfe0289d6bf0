package com.care.test02;

import java.util.Scanner;

public class MainClass {

	public static void main(String[] args) {

		OperationClass oc = new OperationClass();
		PrintClass pc = new PrintClass();
		SaveClass sc = new SaveClass();
		
		Scanner scanner = new Scanner(System.in);
		int num1 = 0 , num2 = 0;
		String op = null;
		
		System.out.print("숫자 1 > "); num1 = scanner.nextInt();
		scanner.nextLine();
		System.out.print("숫자 2 > "); num2 = scanner.nextInt();
		scanner.nextLine();
		System.out.print("연산(+, -, *, /) > "); op = scanner.nextLine();
		
		sc.setOc(oc);
		sc.setPc(pc);
		sc.setNum1(num1);
		sc.setNum2(num2);
		sc.setOp(op);
		
		sc.operationClass();
		sc.printClass();
	}

}
