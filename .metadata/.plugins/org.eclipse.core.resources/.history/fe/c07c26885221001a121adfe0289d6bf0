package com.care.test02;

import java.util.Scanner;

public class OperationClass {

	public int operation(int num1, int num2, String op)
	{
		int result = 0;
		
		if(op.equals("+"))
			result = num1 + num2;
		else if(op.equals("-"))
			result = num1 - num2;
		else if(op.equals("*"))
			result = num1 * num2;
		else if(op.equals("/"))
			result = num1 / num2;
		else
			System.out.println("입력 오류");
		
		return result;
	}
}
