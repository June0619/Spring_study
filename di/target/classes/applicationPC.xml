<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<context:property-placeholder location="classpath:test.properties"/>

	<bean id="pc" class="com.care.ex03.PrintClass"/>
	<bean id="sc" class="com.care.ex03.SaveClass">
		<property name="pc" ref="pc"/>
		
		<property name="name" value="고길동"/>
		<property name="hobby">
			<list>
				<value>수영</value><value>달리기</value>
			</list>
		</property>
		<property name="weather">
			<map>
				<entry key="오늘" value="오늘만 산다"/>
				<entry key="내일" value="내일은 없다"/>
			</map>
		</property>
	</bean>
	
	
	<bean id="sc02" class="com.care.ex03.SaveClass">
		<property name="pc" ref="pc"/>
		<constructor-arg value="생성자 홍길동"/>
		<constructor-arg>
			<list>
				<value>생성자 수영</value>
				<value>생성자 달리기</value>
			</list>
		</constructor-arg>
		<constructor-arg>
			<map>
				<entry key="오늘" value="생성자 먹구름"/>
				<entry key="내일" value="생성자 태풍"/>
			</map>
		</constructor-arg>
	</bean>
	
	
</beans>









